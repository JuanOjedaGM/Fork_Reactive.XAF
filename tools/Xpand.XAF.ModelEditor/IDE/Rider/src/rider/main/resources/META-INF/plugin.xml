<idea-plugin require-restart="true">
  <id>com.jetbrains.rider.plugins.xpand</id>
  <name>Xpand</name>
  <version>_PLACEHOLDER_</version>
  <vendor url="https://www.expandframework.com">eXpandFramework</vendor>
  <idea-version since-build="_PLACEHOLDER_" until-build="_PLACEHOLDER_" />
  <depends>com.intellij.modules.rider</depends>

  <description>
<![CDATA[
<p>Xpand ModelEditor with .NET5 and newer support for DevExpress-XAF .NET Bussiness application projects.</p>
<p>Execute the XpandModelEditor action to display a list of Xaf models avaialble in the solution. Select the model you want to modify and hit Enter to open the XpandModelEditor</p>
]]>
  </description>

  <extensions defaultExtensionNs="com.intellij">
<!--    <applicationConfigurable groupId="language" instance="com.jetbrains.rider.plugins.xpand.SampleOptionsPage" id="SampleOptionsPage" />-->
  </extensions>

  <actions>
    <action id="XpandModelEditorAction" class="com.jetbrains.rider.plugins.xpand.XpandModelEditorAction"
            text="Xpand ModelEditor" description="Xpand ModelEditor">
    </action>
  </actions>

</idea-plugin>
